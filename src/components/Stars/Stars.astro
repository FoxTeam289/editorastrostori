---
import { data } from './data';

import Sky from './Sky.astro';
---

<div class="stars" data-sky>
	<Sky />
</div>
<style lang="scss">
	@import '../styles/settings';

	.stars {
		position: relative;
		display: flex;
		overflow: hidden;
		width: auto;
		height: auto;
		transition: opacity 0.3s ease 0s;

		&::after {
			content: '';
			position: absolute;
			left: 0;
			width: 100%;
			height: 5%;
			z-index: 5;
			opacity: 0;
			transition: all 0.5s ease;

			@include des {
				filter: blur(d(50));
				bottom: d(2);
			}

			@include mob {
			}
		}

		&[data-transparent='stand-white']::after {
			background-color: #bd975f;
		}

		&[data-transparent='stand-black']::after {
			background-color: #454343;
		}

		&.hide {
			opacity: 0;
		}

		&.transparent::after {
			opacity: 1;
		}

		@include des {
			position: absolute;
			top: 0;
			right: 0;
			border-radius: d(30);
			box-shadow: 0 0 d(10) 0 #ccc;
		}

		@include mob {
		}
	}
</style>
