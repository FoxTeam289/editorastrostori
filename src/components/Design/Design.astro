---
import { data } from "./data";

const { title, typeCard, items } = data;
---

<div class="design" data-design>
  {title && <h2 class="design__title">{title}</h2>}
  {
    items && (
      <div class="design__items">
        {items.map(({ id, name, price, img, active }) => (
          <div class="item">
            <input
              class="item__input"
              id={`${typeCard}-${id}`}
              type="radio"
              value={id}
              name={`${typeCard}-${name}`}
              data-price={price ? price : 0}
              checked={active ? true : false}
              data-design-el={id}
              data-checked
            />
            <label class="item__label" for={`${typeCard}-${id}`}>
              <img
                class="item__img"
                src={`img/design/${id}.jpeg`}
                alt={img.alt}
              />
            </label>
          </div>
        ))}
      </div>
    )
  }
</div>
<style lang="scss">
  @import "../styles/settings";

  .design {
    width: 100%;

    &.hide {
      pointer-events: none;
    }

    @include des {
      margin-bottom: d(24);
    }

    @include mob {
    }

    &__title {
      color: #241f1f;
      font-weight: 500;
      line-height: 130%;

      @include des {
        font-size: d(18);
        letter-spacing: d(-0.54);
        margin-bottom: d(12);
      }

      @include mob {
        font-size: m(15);
        letter-spacing: m(-0.45);
        margin-bottom: m(15);
      }
    }

    &__items {
      display: grid;

      @include des {
        grid-template-columns: repeat(4, 1fr);
        grid-gap: d(10);
      }

      @include mob {
      }
    }
  }

  .item {
    width: 100%;

    &__input {
      display: none;

      &:checked + label {
        border-color: #eb503e;
      }
    }

    &__label {
      position: relative;
      width: 100%;
      aspect-ratio: 1/1.35715;
      border-style: solid;
      border-color: #e0dbdb;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;

      @include easy(border-color);

      @include des {
        border-radius: d(16);
        border-width: d(1);
      }

      @include mob {
      }

      &:is(:hover) {
        border-color: #eb503e;
        cursor: pointer;
      }

      & img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
  }
</style>
