---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --fonts-sz-default: 16px;
    --fonts-weight-default: 400;
    --line-heigh-default: 1;

    --font-default: sans-serif;
    --font-montserrat: "Montserrat", var(--font-default);

    --black: rgba(36, 31, 31, 1);
    --white: rgba(255, 255, 255, 1);
    --gray: rgba(224, 219, 219, 1);
    --gray-dark: rgba(107, 102, 99, 1);
    --gray-light: rgba(252, 250, 250, 1);
    --orange: rgba(235, 80, 62, 1);
    --orange-light: rgba(227, 165, 158, 1);
    --transparent: rgba(0, 0, 0, 0);
    --red: rgb(255, 0, 0, 1);
    --pink: rgba(252, 230, 228, 1);
  }

  #rec652965631,
  .t762 {
    position: fixed !important;
    top: 0 !important;
    right: 0 !important;
    z-index: 999 !important;
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
    pointer-events: none !important;
  }

  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    border: 0;
    border: none;
    outline: none !important;
  }
  
  html,
  body {
    width: 100%;
    height: 100%;
    font-size: var(--fonts-sz-default);
    font-weight: var(--fonts-weight-default);
    line-height: var(--line-heigh-default);
    font-family: var(--font-montserrat);
    user-select: none;
    overflow-x: hidden;
  }

  body {
    position: relative;
    background-color: var(--color-white);
    color: var(--color-black);
  }

  main {
    min-height: 100vh;
    background-color: inherit;
  }

  a {
    color: inherit;
    text-decoration: none;
    /* -webkit-tap-highlight-color: rgba(0, 0, 0, 0); */
  }

  button {
    font-family: var(--font-playfair-display);
  }

  ul,
  ol,
  li {
    list-style-type: none;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-size: inherit;
    font-weight: inherit;
  }

  img {
    object-fit: cover;
  }
</style>
